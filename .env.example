SPRING_PROFILE=local
TZ=GMT+7
PORT=8089

# ========================
# Application Configuration
# ========================
COMPOSE_PROJECT_NAME=springboot-boilerplate
APP_NAME=springboot-boilerplate
APP_VERSION=1.0.0
SPRING_PROFILES_ACTIVE=local
SERVER_SHUTDOWN=graceful

# ========================
# PostgreSQL Configuration
# ========================
POSTGRES_DB=springboot_boilerplate
POSTGRES_USER=pguser
POSTGRES_PASSWORD=pgpassword
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_SCHEMA=public
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB

# ========================
# Redis Configuration
# ========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ========================
# Mailhog Configuration
# ========================
MAILHOG_SMTP_HOST=mailhog
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ========================
# LocalStack Configuration
# ========================
LOCALSTACK_ENDPOINT=http://localstack:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# ========================
# JWT Configuration
# ========================
JWT_SECRETKEY=your-super-secret-key-change-in-production-environment
JWT_ISSUER=springboot-boilerplate
JWT_EXPIRATIONMINUTE=60

# ========================
# Swagger/API Documentation
# ========================
SWAGGER_APPNAME=Spring Boot Boilerplate
SWAGGER_APPDESCRIPTION=Spring Boot Boilerplate API Documentation
SWAGGER_APPVERSION=1.0.0
SWAGGER_APPLICENSE=Apache 2.0
SWAGGER_APPLICENSE_URL=https://www.apache.org/licenses/LICENSE-2.0.html
SWAGGER_CONTACTNAME=Your Company
SWAGGER_CONTACTMAIL=contact@example.com
SWAGGER_CONTACTURL=https://example.com

# ========================
# Logging Configuration
# ========================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_COM_CONGLT=DEBUG

# ========================
# Database Connection Pool
# ========================
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=300000

# ========================
# pgAdmin Configuration
# ========================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# ========================
# Docker Network
# ========================
DOCKER_NETWORK=springboot-network
